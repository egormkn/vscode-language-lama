{
    "name": "lsp-sample",
    "publisher": "vscode-samples",
    "version": "0.6.0",
    "displayName": "Lama Language",
    "description": "Lama Language support for Visual Studio Code",
    "author": "Egor Makarenko <egormkn@yandex.ru>",
    "license": "MIT",
    "homepage": "https://github.com/egormkn/vscode-language-lama",
    "repository": {
        "type": "git",
        "url": "https://github.com/egormkn/vscode-language-lama.git"
    },
    "bugs": {
        "url": "https://github.com/egormkn/vscode-language-lama/issues"
    },
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "icon": "images/icon.png",
    "galleryBanner": {
        "color": "#C8A000",
        "theme": "dark"
    },
    "activationEvents": [
        "onLanguage:plaintext"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "lama",
                "aliases": [
                    "Lama",
                    "lama"
                ],
                "extensions": [
                    ".lama"
                ],
                "configuration": "language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lama",
                "scopeName": "source.lama",
                "path": "syntaxes/lama.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "lama",
                "path": "snippets/snippets.json"
            }
        ],
        "iconThemes": [
            {
                "id": "lama",
                "label": "Lama",
                "path": "./fileicons/lama-icon-theme.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "languageServerExample.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "languageServerExample.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
        "compile": "tsc -b",
        "lint": "eslint src --ext ts",
        "watch": "tsc -b -w",
        "pretest": "npm run compile && npm run lint",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.1",
        "@types/node": "^12.11.7",
        "@typescript-eslint/eslint-plugin": "^2.23.0",
        "@typescript-eslint/parser": "^2.23.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.0.1",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0"
    }
}
